<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/create_recipe_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:lines="2"
                android:hint="@string/hint_create_recipe_name"
                android:inputType="textCapSentences|textAutoCorrect"
                android:id="@+id/create_recipe_name_edittext" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/create_recipe_author_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:lines="2"
                android:hint="@string/hint_create_recipe_author"
                android:inputType="textAutoCorrect"
                android:id="@+id/create_recipe_author_edittext" />
        </android.support.design.widget.TextInputLayout>

        <include layout="@layout/fragment_edit_recipe_foto_common" />

    </LinearLayout>

</ScrollView>
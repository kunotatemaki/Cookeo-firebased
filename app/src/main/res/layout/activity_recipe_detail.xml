<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto">

    <fragment
        android:id="@+id/details_recipes_fragment"
        android:name="com.rukiasoft.androidapps.cocinaconroll.ui.RecipeDetailsFragment"
        tools:layout="@layout/fragment_recipe_details" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/smart_add"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adview_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id_details">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
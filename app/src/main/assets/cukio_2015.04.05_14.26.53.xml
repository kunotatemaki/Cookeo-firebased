<recipeItem>
   <name>Brócoli al ajillo</name>
   <type>starter</type>
   <picture>cukio_2015.04.05_14.26.53.jpg</picture>
   <ingredients class="java.util.ArrayList">
      <string>250 g brócoli</string>
      <string>1 unidad/es ajo</string>
      <string>15 g avellanas</string>
      <string>30 ml aceite de oliva</string>
      <string>50 ml agua</string>
      <string>1 pizca sal y pimienta</string>
   </ingredients>
   <steps class="java.util.ArrayList">
      <string>Dorar el ajo y las almendras durante 3 minutos.</string>
      <string>Añadir el brócoli con la sal y la pimienta.</string>
      <string>Cocinar en baja presión 3minutos. Para 4 personas cocinar en baja presión 5 minutos. Para 6 personas cocinar en baja presión 8 minutos.</string>
   </steps>
   <author>Programada en el robot</author>
   <vegetarian>true</vegetarian>
   <portions>2</portions>
   <minutes>10</minutes>
   <language>Spanish</language>
   <tip></tip>
</recipeItem>